<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".menuFactura">

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="100dp"
        android:layout_height="92dp"
        app:srcCompat="@drawable/logoprin2"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="34dp" />

    <TextView
        android:id="@+id/lblfactura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/factura"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="137dp" />

    <Button
        android:id="@+id/btncrearfactura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="crear factura"
        app:backgroundTint="@null"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="259dp" />

    <Button
        android:id="@+id/btnactualizarfactura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="actualizar factura"
        app:backgroundTint="@null"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="381dp" />
</androidx.constraintlayout.widget.ConstraintLayout>